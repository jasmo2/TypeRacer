$gameInput.keyup(function(e){
  if(e.keyCode === 8  && game.wordCount !== 0){
    game.wordCount -= 1;
    game.wordCheck(null, game.$gameInput.val().slice(-1).charCodeAt(0));
    game.wordCount -= 1;
  }else if(e.keyCode === 32){
   game.wordCheck(e,null,true);
  }else{
    debugger
    game.wordCheck(e);
  }

});


