$('#play').hide().after('<%= j render "games/game" %>');
var $gameInput = $("#game-input");
var game = new theGame({text: $("#game-text"), gameInput: $gameInput, gameSlider: $("#slider"), gameActiveWord: $("#game-active-word")});

//game.initializer();
$gameInput.keypress(function(e) {
   switch(e.keyCode){
    case 8:
    case 32:
    case 16:
    case 20:
      break;
    //Letters
    default:
       game.wordCheck(e);
    break;
  }
});

$gameInput.keyup(function(e){
  switch(e.keyCode){
    case 8:
      if (game.wordCount !== 0) {
        game.wordCount -= 2;
        game.wordCheck(null, game.$gameInput.val().slice(-1).charCodeAt(0));
      };
      break;
    case 32:
      game.wordCheck(e,null,true);
      break;
    //Letters
    default:
      break;
  }
});