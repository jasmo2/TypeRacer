$('#play').hide().after('<%= j render "games/game" %>');
var $gameInput = $("#game-input");
var $gameText = $("#game-text");
var $gameSlider = $("#slider");
var game = new theGame({text: $gameText, gameInput: $gameInput, gameSlider: $gameSlider});

var wordArray = [];
//game.initializer();
$gameInput.keypress(function(e) {
  game.wordCheck(e);
});

$gameInput.keyup(function(e){
  if(e.keyCode === 8  && game.wordCount !== 0){
    game.wordCount -= 1;
    game.wordCheck(null, game.$gameInput.val().slice(-1).charCodeAt(0));
    game.wordCount -= 1;
  }
  if(e.keyCode === 32){
   game.wordCheck(e,null,true);
  }
});
