$('#play').hide().after('<%= j render "games/game" %>');
var $gameInput = $("#game-input");
var $gameText = $("#game-text");
var $gameSlider = $("#slider");
var $gameActiveWord = $("#game-active-word");
var game = new theGame({text: $gameText, gameInput: $gameInput, gameSlider: $gameSlider, gameActiveWord: $gameActiveWord});

