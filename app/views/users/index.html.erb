<% if flash[:alert]%>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="la-modal">
  <div class="preinitializer">
    <h2>Alístate... 
      <span id="preinitializer-counter" class="preinitializer-counter">3</span>
    </h2>
  </div>
</div>
<div class="container custom">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 centered">
			<h1>¡Bienvenido a type horse racer!</h1>
      <%= link_to "jugar", game_path, id: "play", remote: true, class: "btn btn-info btn-big"  %>


		</div>

		<div class="col-md-12">
			<div class="col-md-4">
				<h2 class="centered">Mis mejores puntajes</h2>
				<table class="table table-striped table-bordered">
			      <thead>
			        <tr>
			          <th class="header-ranking centered">ranking</th>
			          <th class="centered">puntaje</th>
			        </tr>
			      </thead>
			      <tbody>
              <%if !@my_highscores.blank? %>
                <% position = 0 %>
                <% @my_highscores.each do |score| %>
                  <tr>
                    <td class="centered bold"><%= position +=1 %></td>
                    <td class="right"><%= score.score %></td>
                  </tr>
                <% end  %>
              <% else %>
                <tr>
                  <td class="centered bold">Atrevete</td>
                  <td class="right">Sin Puntaje</td>
                </tr>
			        <% end %>
			      </tbody>
			    </table>
			</div>

			<div class="col-md-8">
				<h2 class="centered">Ganadores de todos los tiempos</h2>
				<table class="table table-striped table-bordered">
			      <thead>
			        <tr>
			          <th class="header-ranking centered">ranking</th>
			          <th class="centered">nombre usuario</th>
			          <th class="centered">puntaje</th>
			        </tr>
			      </thead>
			      <tbody>
              <%if !@all_time_highscores.blank? %>
                  <% position = 0 %>
                  <% @all_time_highscores.each do |score| %>
                    <tr>
                      <td class="centered bold"><%= position +=1 %></td>
                      <td><%= score.user.username %></td>
                      <td class="right"><%= score.score %></td>
                    </tr>
                  <% end  %>
                <% else %>
                  <tr>
                    <td class="centered bold">1.</td>
                    <td>forever alone</td>
                    <td class="right">no hay puntajes</td>
                  </tr>
              <% end %>
			      </tbody>
			    </table>
			</div>
		</div>
	</div>
</div>

