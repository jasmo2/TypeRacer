<div class="container custom">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 centered">
      <h1>Lista de Usuarios</h1>
      <br><br><br>
      <table id="users-list" class="table table-striped table-bordered">
        <thead>
          <tr>
          <th class="header-ranking centered">Neumero</th>
            <th class="centered">Usuario</th>
          </tr>
        </thead>
        <tbody>
          <%if !@users.blank? %>
            <% position = 0 %>
            <% @users.each do |user| %>
            <tr>
              <td class="centered bold"><%= position +=1 %></td>
              <td class="right">
                <%= link_to user_path(user) , remote: true do %>
                  <%= user.username %>
                <% end %>
              </td>
            </tr>
            <% end  %>
          <% else %>
            <tr>
              <td class="centered bold">1</td>
              <td class="right">Forever Alone</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
function goBack() {
    window.history.back();
}
</script>
