      <%= link_to("Volver", users_list_path, class: "btn btn-default") %>

<h2 class="centered">Mejores puntajes de <%= @username %> </h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th class="header-ranking centered">ranking</th>
      <th class="centered">puntaje</th>
    </tr>
  </thead>
  <tbody>
    <%if !@highscores.blank? %>
    <% position = 0 %>
    <% @highscores.each do |score| %>
    <tr>
      <td class="centered bold"><%= position +=1 %></td>
      <td class="right"><%= score.score %></td>
    </tr>
    <% end  %>
    <% else %>
    <tr>
      <td class="centered bold">Atrevete</td>
      <td class="right">Sin Puntaje</td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>